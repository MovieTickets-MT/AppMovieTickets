<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".CreateaccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="55dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/taikhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Tài khoản"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/sodienthoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Số điện thoại"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Email"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/matkhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/nhapmatkhau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint=" Xác nhận mật khẩu"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <Button
                android:id="@+id/createbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_xxlarge"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_xxlarge"
                android:background="@drawable/bg_button"
                android:text="Tạo tài khoản"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/backtologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="Đăng nhập"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>