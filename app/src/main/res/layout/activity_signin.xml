<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="420dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical"
            android:paddingBottom="55dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/llemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Tài khoản"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_normal"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/llpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_normal"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_xxlarge"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_xxlarge"
                android:background="@drawable/bg_button"
                android:text="Đăng nhập"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="Đăng ký"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>