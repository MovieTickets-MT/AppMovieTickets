<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="horizontal"
    tools:context=".ForgotpasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="210dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="55dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_normal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_tiny"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:text="Quên mật khẩu?"
                    android:padding="@dimen/margin_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_tiny"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:text="Nhập email của bạn và chúng tôi sẽ gửi link xác nhận"
                    android:padding="@dimen/margin_small_tiny"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />

                <EditText
                    android:id="@+id/llemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_xlarge"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_xlarge"
                    android:background="@drawable/bg_dialog_button_gray"
                    android:hint="Email của bạn"
                    android:padding="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textColorHint="@color/text_buttom"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <Button
                android:id="@+id/updatepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_xxlarge"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_xxlarge"
                android:background="@drawable/bg_button"
                android:text="Cập nhật lại mật khẩu"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/buttonbacklogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:text="Quay lại đăng nhập"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>